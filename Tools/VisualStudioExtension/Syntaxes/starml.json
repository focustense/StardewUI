{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "StarML",
  "scopeName": "source.sml",
  "fileTypes": [
    ".sml",
    ".starml"
  ],
  "patterns": [
    {
      "include": "#tag-start"
    },
    {
      "include": "#tag-end"
    }
  ],
  "repository": {
    "tag-start": {
      "name": "meta.tag.sml",
      "begin": "(<)([a-zA-Z0-9-_]+)",
      "beginCaptures": {
        "1": {
          "name": "punctuation.definition.tag.sml"
        },
        "2": {
          "name": "entity.name.tag.sml"
        }
      },
      "end": "/?>",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.tag.sml"
        }
      },
      "patterns": [
        {
          "include": "#attribute"
        },
        {
          "include": "#conditional"
        }
      ]
    },
    "tag-end": {
      "name": "meta.tag.sml",
      "match": "(</)([a-zA-Z0-9-_]+)(>)",
      "captures": {
        "1": {
          "name": "punctuation.definition.tag.sml"
        },
        "2": {
          "name": "entity.name.tag.sml"
        },
        "3": {
          "name": "punctuation.definition.tag.sml"
        }
      }
    },
    "attribute": {
      "name": "meta.attribute.sml",
      "patterns": [
        {
          "match": "(?:^|\\s+)([-\\w]+)=",
          "captures": {
            "1": {
              "name": "entity.name.attribute.sml"
            }
          }
        },
        {
          "include": "#string"
        },
        {
          "include": "#binding"
        },
        {
          "include": "#event"
        }
      ]
    },
    "conditional": {
      "patterns": [
        {
          "match": "(?:^|\\s+)([\\*](?:case|context|if|repeat|switch))=",
          "captures": {
            "1": {
              "name": "keyword.control.sml"
            }
          }
        }
      ]
    },
    "string": {
      "name": "string.quoted.double.sml",
      "begin": "\"",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.string.begin.sml"
        }
      },
      "end": "\"",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.string.end.sml"
        }
      },
      "patterns": [
        {
          "match": "[^\"]+"
        }
      ]
    },
    "binding": {
      "name": "attribute.value.braced.sml",
      "begin": "{",
      "beginCaptures": {
        "0": {
          "name": "punctuation.binding.open.sml"
        }
      },
      "end": "}",
      "endCaptures": {
        "0": {
          "name": "punctuation.binding.close.sml"
        }
      },
      "patterns": [
        {
          "match": "((?:[\\^~@])|(?:<?>?))?([^}]+)",
          "captures": {
            "1": {
              "name": "keyword.operator.sml"
            },
            "2": {
              "name": "variable.name.sml"
            }
          }
        }
      ]
    },
    "event": {
      "name": "attribute.value.piped.sml",
      "begin": "\\|",
      "beginCaptures": {
        "0": {
          "name": "punctuation.event.open.sml"
        }
      },
      "end": "\\|",
      "endCaptures": {
        "0": {
          "name": "punctuation.event.close.sml"
        }
      },
      "patterns": [
        {
          "name": "support.function.sml",
          "match": "([\\^~])?[^\"|(]+(?:\\(([^\"|)]+)\\))?",
          "captures": {
            "1": {
              "name": "keyword.operator.sml"
            },
            "2": {
              "name": "constant.language"
            }
          }
        }
      ]
    }
  }
}